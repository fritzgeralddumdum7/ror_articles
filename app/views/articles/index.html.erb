<h1>Articles</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Content</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.author %></td>
        <td><%= article.content.truncate(100) %></td>
        <td>
          <%= link_to 'Edit', edit_article_path(article) %> |
          <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" } %> |
          <%= link_to 'Show', article_comments_path(article) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New article', :new_article %>
